<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_coupon_slot"
    android:layout_width="match_parent"
    android:layout_height="60pt"
    android:layout_marginTop="10pt"
    android:layout_marginBottom="10pt"
    android:background="@drawable/slot_background"
    tools:context=".VideoListActivity">

    <ImageView
        android:id="@+id/immagine_spot_pubblicitario"
        android:layout_width="60pt"
        android:layout_height="match_parent"
        android:layout_marginLeft="4pt"
        android:layout_marginTop="4pt"
        android:layout_marginRight="4pt"
        android:layout_marginBottom="4pt"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titolo_spot_pubblicitario"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/descrizione_spot_pubblicitario"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>